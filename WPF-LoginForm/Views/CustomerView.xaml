                 Margin="-2,5,0,0"
                 Padding="20,0,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/user-icon.png"
    Stretch="None"
    AlignmentX="Left"/>
            </TextBox.Background>
        </TextBox>-->
                    <ComboBox x:Name="Penerima" 
                  Style="{StaticResource ComboBoxFlatStyle}" VerticalContentAlignment="Center" Width="498" FontSize="12" Height="28" Margin="0,5,0,0" FontFamily="Montserrat" FontWeight="Medium"
                  SelectedIndex="0">
                        <ComboBoxItem>Nama Karyawan 1</ComboBoxItem>
                        <ComboBoxItem>Nama Karyawan 2</ComboBoxItem>
                        <ComboBoxItem>Nama Karyawan 3</ComboBoxItem>

                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tanggal"
       Foreground="DarkGray"
       FontSize="12"
       FontWeight="Medium"
       FontFamily="Montserrat"
       Margin="0,0,10,0"
       VerticalAlignment="Center"/>



                    <TextBox x:Name="txtTanggal"
     Text=""
     FontSize="13"
     FontWeight="Medium"
     FontFamily="Montserrat"
     Foreground="White"
     CaretBrush="LightGray"
     BorderBrush="DarkGray"
     BorderThickness="0,0,0,2"
     Height="30"
     Width="500"         
     VerticalContentAlignment="Center"
     Margin="9,5,0,0"
     Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/date.png"
                            Stretch="None"
                            AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Isi Pesan"
       Foreground="DarkGray"
       FontSize="12"
       FontWeight="Medium"
       FontFamily="Montserrat"
       Margin="0,15,0,0"/>

                    <TextBox x:Name="txtIsi"
     Text=""
     FontSize="13"
     FontWeight="Medium"
     FontFamily="Montserrat"
     Foreground="White"
     CaretBrush="LightGray"
     BorderBrush="DarkGray"
     BorderThickness="2,2,2,2"
     Height="225"
     Width="500"
     VerticalContentAlignment="Top"
     TextWrapping="Wrap"
     AcceptsReturn="True"
     Margin="14,10,0,0"
     Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush/>
                        </TextBox.Background>
                    </TextBox>

                    <Button Content="Tolak"                            
FontSize="12"
FontFamily="Montserrat"
Cursor="Hand"
BorderThickness="0"
Foreground="White"
Margin="10,0,0,0"
                VerticalAlignment="Bottom">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="OrangeRed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Height="40" Width="100"
                CornerRadius="15"
                Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkRed"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Setuju"                            
FontSize="12"
FontFamily="Montserrat"
Cursor="Hand"
                VerticalAlignment="Bottom"
BorderThickness="0"
Foreground="White"
Margin="10,0,0,0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="ForestGreen"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Height="40" Width="100"
                CornerRadius="15"
                Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkOliveGreen"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>


            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical" Margin="0,10,0,0" HorizontalAlignment="Left">


                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Pengirim"
       Foreground="DarkGray"
       FontSize="12"
       FontWeight="Medium"
       FontFamily="Montserrat"
       Margin="0,0,10,0"
       VerticalAlignment="Center"/>

                    <TextBox x:Name="txtPengirim2"
     Text=""
     FontSize="13"
     FontWeight="Medium"
     FontFamily="Montserrat"
     Foreground="White"
     CaretBrush="LightGray"
     BorderBrush="DarkGray"
     BorderThickness="0,0,0,2"
     Height="30"
     Width="500"         
     VerticalContentAlignment="Center"
     Margin="0,5,0,0"
     Padding="20,0,0,0">

                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                Stretch="None"
                AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                </StackPanel>




                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Subjek"
       Foreground="DarkGray"
       FontSize="12"
       FontWeight="Medium"
       FontFamily="Montserrat"
       Margin="0,0,10,0"
       VerticalAlignment="Center"/>

                    <TextBox x:Name="txtSubjek2"
     Text=""
     FontSize="13"
     FontWeight="Medium"
     FontFamily="Montserrat"
     Foreground="White"
     CaretBrush="LightGray"
     BorderBrush="DarkGray"
     BorderThickness="0,0,0,2"
     Height="30"
     Width="500"         
     VerticalContentAlignment="Center"
     Margin="15,5,0,0"
     Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/pen-2.png"
                Stretch="None"
                AlignmentX="Left" />
                        </TextBox.Background>
                    </TextBox>
                </StackPanel>


                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Penerima"
                   Foreground="DarkGray"
                   FontSize="12"
                   FontWeight="Medium"
                   FontFamily="Montserrat"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>

                    <!--<TextBox x:Name="txtPenerima"
                 Text=""
                 FontSize="13"
                 FontWeight="Medium"
                 FontFamily="Montserrat"
                 Foreground="White"
                 CaretBrush="LightGray"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,2"
                 Height="30"
                 Width="500"         
                 VerticalContentAlignment="Center"
                 Margin="-2,5,0,0"
                 Padding="20,0,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/user-icon.png"
    Stretch="None"
    AlignmentX="Left"/>
            </TextBox.Background>
        </TextBox>-->
                    <ComboBox x:Name="Penerima2" 
                  Style="{StaticResource ComboBoxFlatStyle}" VerticalContentAlignment="Center" Width="498" FontSize="12" Height="28" Margin="0,5,0,0" FontFamily="Montserrat" FontWeight="Medium"
                  SelectedIndex="0">
                        <ComboBoxItem>Nama Karyawan 1</ComboBoxItem>
                        <ComboBoxItem>Nama Karyawan 2</ComboBoxItem>
                        <ComboBoxItem>Nama Karyawan 3</ComboBoxItem>

                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tanggal"
       Foreground="DarkGray"
       FontSize="12"
       FontWeight="Medium"
       FontFamily="Montserrat"
       Margin="0,0,10,0"
       VerticalAlignment="Center"/>



                    <TextBox x:Name="txtTanggal2"
     Text=""
     FontSize="13"
     FontWeight="Medium"
     FontFamily="Montserrat"
     Foreground="White"
     CaretBrush="LightGray"
     BorderBrush="DarkGray"
     BorderThickness="0,0,0,2"
     Height="30"
     Width="500"         
     VerticalContentAlignment="Center"
     Margin="9,5,0,0"
     Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/date.png"
                            Stretch="None"
                            AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Isi Pesan"
       Foreground="DarkGray"
       FontSize="12"
       FontWeight="Medium"
       FontFamily="Montserrat"
       Margin="0,15,0,0"/>

                    <TextBox x:Name="txtIsi2"
     Text=""
     FontSize="13"
     FontWeight="Medium"
     FontFamily="Montserrat"
     Foreground="White"
     CaretBrush="LightGray"
     BorderBrush="DarkGray"
     BorderThickness="2,2,2,2"
     Height="225"
     Width="500"
     VerticalContentAlignment="Top"
     TextWrapping="Wrap"
     AcceptsReturn="True"
     Margin="14,10,0,0"
     Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush/>
                        </TextBox.Background>
                    </TextBox>

                    <Button Content="Kirim"                            
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            VerticalAlignment="Bottom"
                            BorderThickness="0"
                            Foreground="White"
                            Margin="10,0,0,0">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="ForestGreen"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Height="40" Width="100"
                                                CornerRadius="15"
                                                Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkOliveGreen"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>


            </StackPanel>

        </Grid>
        <Border Grid.Row="1"
                Background="#200F53"
                CornerRadius="10" 
                Padding="10">

            <DataGrid ColumnWidth="*"
                  Background="#200F53"
                  BorderThickness="0">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#BCBEE0"/>
                        <Setter Property="Padding" Value="10,0,0,10"/>
                        <Setter Property="FontFamily" Value="Montserrat"/>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="No" HeaderStringFormat=""/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Pengirim"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Subjek"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Penerima"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Keterangan"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Status"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Tanggal"/>
                    <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Action"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="2" BorderBrush="DarkGray" Margin="5" BorderThickness="2" CornerRadius="10"/>


        <!--Kanan-->

    </Grid>
</UserControl>