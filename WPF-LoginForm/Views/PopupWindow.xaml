<Window x:Class="WPF_LoginForm.Views.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_LoginForm.Views"
        xmlns:viewModel="clr-namespace:WPF_LoginForm.ViewModels"
        mc:Ignorable="d"
        Title="Tambah View" Height="550" Width="650"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Grid >
        
        <Border CornerRadius="15"
                BorderThickness="2" >
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Border BorderThickness="0,0,0,2" >
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                    </Border>
                    <TextBlock Text="Anggota" 
                           Foreground="White" 
                           FontSize="20" 
                           FontFamily="Montserrat" 
                           Margin="20,0,0,0" 
                           VerticalAlignment="Center"/>
                    <Button x:Name="btnClose"                          
        BorderThickness="0"
        Content="X"
        Foreground="White"
        FontSize="15"
        FontFamily="Montserrat"
        Cursor="Hand"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
        Click="btnClose_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20"
                    CornerRadius="9"
                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <Border Background="White" CornerRadius="20" Grid.Row="1" Height="350" Width="500">
                    <Grid >
                    <StackPanel Orientation="Vertical" Margin="25,0">
                        <TextBlock Text="List Anggota" FontSize="20" FontWeight="SemiBold" FontFamily="Montserrat" Margin="0,0,0,20"/>
                            <DataGrid  Background="Transparent"
                                       ItemsSource="{Binding AnggotaAgenda}"
                                   BorderThickness="1,1,1,1"
                                   Foreground="Black"
                                   AutoGenerateColumns="False"
                                   FontSize="16"
                                   RowHeight="35"
                                   ColumnHeaderHeight="40"
                                   GridLinesVisibility="Vertical"
                                   BorderBrush="Black"
                                   Padding="0"
                                   Margin="0"
                                   HorizontalAlignment="Stretch"
                                   Width="450"
                                   Height="250"
                                   HeadersVisibility="Column"
                                   CanUserAddRows="False"
                                   VerticalScrollBarVisibility="Auto" 
                                   HorizontalScrollBarVisibility="Auto">

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Padding" Value="10,0,0,10"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FontFamily" Value="Montserrat"/>
                                        <Setter Property="FontSize" Value="16"/>

                                        <!-- Efek Hover untuk Sel -->
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridCell">
                                                    <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="0">
                                                        <ContentPresenter VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E5E5E5" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>

                                <!-- Gaya untuk Baris -->
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <!-- Efek Hover untuk Baris -->
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D3D3D3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <!-- Gaya untuk Header Kolom -->
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#333333"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Padding" Value="10,0,0,10"/>
                                        <Setter Property="FontFamily" Value="Montserrat"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Value" Width="100" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Value, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                                <!-- Menetapkan batas maksimal tinggi jika diperlukan -->
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Visibility="Visible" Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Header="Anggota" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                </Grid>
                </Border>
                <Button Content="Simpan"                            
                        FontSize="12"
                        Command="{Binding SimpanCommand}"
                        IsEnabled="True"
                        FontFamily="Montserrat"
                        Grid.Row="1"
                        VerticalAlignment="Bottom"
                        Margin="80,0,0,15"
Cursor="Hand"
BorderThickness="0"
Foreground="White"
Width="100"
HorizontalAlignment="Left"
Style="{StaticResource SearchButton}"/>

            </Grid>
            <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        </Border>
    </Grid>
</Window>
